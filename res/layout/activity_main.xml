<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<Button
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/checkbutton"
	    android:text="查询"
	    />
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/showupdateinfo"
	    />
	
	<Button
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/senddownloadreport"
	    android:text="发送下载报告"
	    />
	
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/showdownloadreportresult"
	    />
	
	<Button
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/senddupdatereport"
	    android:text="发送升级报告"
	    />
	
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/showupdatereportresult"
	    />


</LinearLayout>
